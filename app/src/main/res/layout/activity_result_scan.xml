<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResultScanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@drawable/bg_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_back_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txt_edit_profile_appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font3_poppins_semibold"
            android:text="@string/resultscan_title"
            android:layout_marginTop="24sp"
            android:layout_marginStart="88dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/btn_back_detail"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="55dp"
            android:adjustViewBounds="true"
            android:paddingHorizontal="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_edit_profile_appbar"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/item_era"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Era"
            android:fontFamily="@font/font4_comic"
            android:layout_marginTop="88dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="44dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <TextView
            android:id="@+id/tv_item_era"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="era"
            app:layout_constraintTop_toBottomOf="@+id/item_era"
            android:layout_marginStart="44dp"
            android:layout_marginHorizontal="16dp"
            android:transitionName="name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="Style"
            android:fontFamily="@font/font4_comic"
            android:scaleType="centerCrop"
            android:layout_marginStart="44dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_era" />

        <TextView
            android:id="@+id/tv_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="style"
            app:layout_constraintTop_toBottomOf="@+id/item_style"
            android:layout_marginStart="44dp"
            android:layout_marginHorizontal="16dp"
            android:transitionName="name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font4_comic"
            android:textStyle="bold"
            android:text="Genre"
            android:layout_marginStart="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_style" />

        <TextView
            android:id="@+id/tv_item_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="genre"
            android:textSize="15sp"
            android:paddingEnd="12dp"
            android:layout_marginStart="44dp"
            android:layout_marginHorizontal="16dp"
            android:transitionName="genre"
            app:layout_constraintTop_toBottomOf="@+id/item_genre"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>