<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.language.LanguageActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txt_edit_profile_appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3_poppins_semibold"
        android:text="@string/change_language"
        android:layout_marginTop="28sp"
        android:layout_marginStart="68dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary">

            <LinearLayout
                android:id="@+id/linearLayout1_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewindonesia"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/indonesia" />

                <TextView
                    android:id="@+id/textViewindonesia"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_indonesia"
                    android:layout_width="190dp"
                    android:layout_height="42dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/font5_poppinsbold"
                    android:contentDescription="@string/btn1_content_desc_language"
                    android:text="@string/tv_indonesia_language"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1_language">

                <ImageView
                    android:id="@+id/imageViewunitedstates"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/unitedstates" />

                <TextView
                    android:id="@+id/textViewunitedstates"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_unitedstates"
                    android:layout_width="190dp"
                    android:layout_height="42dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/font5_poppinsbold"
                    android:contentDescription="@string/btn2_content_desc_language"
                    android:text="@string/tv_english_language"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2_language">

                <ImageView
                    android:id="@+id/imageViewMalaysia"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/malaysia" />

                <TextView
                    android:id="@+id/textViewmalaysia"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_malaysia"
                    android:layout_width="190dp"
                    android:layout_height="42dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/font5_poppinsbold"
                    android:contentDescription="@string/btn4_content_desc_language"
                    android:text="@string/tv_malaysia_language"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout3_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3_language">

                <ImageView
                    android:id="@+id/imageViewjepang"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/jepang" />

                <TextView
                    android:id="@+id/textViewjepang"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_jepang"
                    android:layout_width="190dp"
                    android:layout_height="42dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/font5_poppinsbold"
                    android:contentDescription="@string/btn3_content_desc_language"
                    android:text="@string/tv_japan_language"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>